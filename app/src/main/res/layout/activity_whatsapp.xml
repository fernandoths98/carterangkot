<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SMSActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:text="F o r m  P e m e s a n a n  W h a t s a p p"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@id/text"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:id="@+id/no_hp_wa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/pesan_wa"
            android:layout_below="@id/no_hp_wa"
            android:hint="Masukkan Pesan untuk Driver"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <LinearLayout

            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/pesan_wa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginRight="10dp"
                android:id="@+id/send_wa"
                android:src="@drawable/ic_baseline_send_24"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageButton
                android:onClick="back"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/back"
                android:src="@drawable/ic_baseline_home_24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:ignore="OnClick" />

        </LinearLayout>

        <TextView
            android:id="@+id/copy"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:text="Copyright @ Fernando Teguh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>